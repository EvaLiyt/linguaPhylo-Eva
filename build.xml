<project default="compile-all" basedir="." name="linguaPhylo" >

    <!-- Java 11 -->
    <property name="sourceVersion" value="15"/>
    <property name="targetVersion" value="15"/>

    <!--*******************************************************************-->

    <!-- Ant build fails if the repo dir isn't named linguaPhylo -->
    <property name="repoName" value="linguaPhylo"/>
    <property name="projName" value="LPhy"/>
    <property name="projName2" value="LPhyStudio"/>

    <!--*******************************************************************-->

    <target name="compile-all">
        <ant target="compile" antfile="build.xml" dir="${projName}"/>
<!--        <ant target="compile" antfile="build.xml" dir="${projName2}"/>-->
    </target>

    <target name="compile-all-tests">
        <ant target="compile-test" antfile="build.xml" dir="${projName}"/>
        <!--        <ant target="compile-test" antfile="build.xml" dir="${projName2}"/>-->
    </target>

    <target name="test-all">
        <ant target="test" antfile="build.xml" dir="${projName}"/>
        <!--        <ant target="test" antfile="build.xml" dir="${projName2}"/>-->
    </target>

    <!--  https://docs.github.com/en/actions  -->
    <target name="github-actions" depends="compile-all, compile-all-tests, test-all">
        <fail if="testFailed" message="One or more ${projName} tests failed."/>
    </target>

</project>
