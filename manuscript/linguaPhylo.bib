	issn = {0022-5193},
	journal = {Journal of Theoretical Biology},
	month = {Jun},
	pages = {41--55},
	publicationstatus = {accepted},
	title = {The fossilized birth-death model for the analysis of stratigraphic range data under different speciation modes},
	volume = {447},
